function nthCharacter(a,b){
  if(a.length >= b ){
      return a[b-1];
  }else{
    return "I am Sorry";
  }
}

nthCharacter("abcd",5);

// Alternative Solution

function nthCharacter2(a,b){
  if(a.length >= b ){
      return a.charAt(b-1);
  }else{
    return "I am Sorry";
  }
}
nthCharacter2("abcd",5);



